        right: -100px;
    }

    .circle-2 {
        width: 200px;
        height: 200px;
        bottom: -50px;
        left: -50px;
        animation-delay: 2s;
    }

    .circle-3 {
        width: 150px;
        height: 150px;
        top: 50%;
        left: 10%;
        animation-delay: 4s;
    }

    @@keyframes float {
