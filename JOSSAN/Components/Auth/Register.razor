        box-shadow: 0 4px 12px rgba(168, 85, 247, 0.3);
    }

    .step.completed .step-circle {
        background: #10b981;
        color: white;
    }

    .step-label {
        font-size: 11px;
        color: #6b7280;
        font-weight: 500;
        text-align: center;
    }

    .step.active .step-label {
        color: #a855f7;
        font-weight: 600;
    }

    .step-line {
        flex: 1;
        height: 2px;
        background: #e5e7eb;
        margin: 0 8px;
        transition: all 0.3s ease;
    }

        .step-line.completed {
            background: #10b981;
        }

    /* Form Styles */
    .register-form {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .form-section {
        animation: fadeIn 0.3s ease;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateX(20px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .section-title {
        font-size: 18px;
