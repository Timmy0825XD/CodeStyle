                        <div class="detail-grid">
                            <div class="detail-item">
                                <span class="detail-label">ID Usuario:</span>
                                <span class="detail-value">@usuarioSeleccionado.Id</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Fecha de Registro:</span>
                                <span class="detail-value">@usuarioSeleccionado.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Último Acceso:</span>
                                <span class="detail-value">@usuarioSeleccionado.UltimoAcceso.ToString("dd/MM/yyyy HH:mm")</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Total Pedidos:</span>
                                <span class="detail-value total-orders">@usuarioSeleccionado.TotalPedidos</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Total Gastado:</span>
                                <span class="detail-value total-spent">$@usuarioSeleccionado.TotalGastado.ToString("N2")</span>
                            </div>
                        </div>
                    </div>

                    <div class="detail-section">
                        <h4>Actividad Reciente</h4>
                        <div class="activity-list">
                            @foreach (var actividad in usuarioSeleccionado.ActividadReciente)
                            {
                                <div class="activity-item">
                                    <span class="activity-icon">@actividad.Icono</span>
                                    <div class="activity-content">
                                        <div class="activity-text">@actividad.Descripcion</div>
                                        <div class="activity-date">@actividad.Fecha.ToString("dd/MM/yyyy HH:mm")</div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

