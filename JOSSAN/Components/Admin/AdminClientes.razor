@page "/AdminClientes"
@using System.Collections.Generic

<div class="container">
    <div class="header-section">
        <h2 class="page-title">Gestión de Usuarios</h2>
        <button class="btn-primary" @onclick="NuevoUsuario">
            <span class="icon">➕</span>
            Nuevo Usuario
        </button>
    </div>

    <div class="content-card">
        <div class="filters-row">
            <div class="search-box">
                <span class="search-icon">🔍</span>
                <input type="text"
                       placeholder="Buscar por nombre, email o cédula..."
                       class="search-input"
                       @bind="searchTerm"
                       @bind:event="oninput" />
            </div>
            <div class="filter-group">
                <select class="filter-select" @bind="filterEstado">
                    <option value="">Todos los estados</option>
                    <option value="activo">Activos</option>
                    <option value="inactivo">Inactivos</option>
                    <option value="suspendido">Suspendidos</option>
                </select>
                <select class="filter-select" @bind="filterTipo">
                    <option value="">Todos los tipos</option>
                    <option value="cliente">Clientes</option>
                    <option value="premium">Premium</option>
                    <option value="administrador">Administradores</option>
                </select>
            </div>
            <button class="btn-secondary">
                <span class="icon">📥</span>
                Exportar
            </button>
        </div>

        <div class="stats-row">
            <div class="stat-item">
                <span class="stat-value">@usuarios.Count</span>
                <span class="stat-label">Total Usuarios</span>
            </div>
            <div class="stat-item">
                <span class="stat-value">@usuarios.Count(u => u.Estado == "activo")</span>
                <span class="stat-label">Activos</span>
            </div>
            <div class="stat-item">
                <span class="stat-value">@usuarios.Count(u => u.TipoUsuario == "premium")</span>
                <span class="stat-label">Premium</span>
            </div>
            <div class="stat-item">
                <span class="stat-value">@usuarios.Count(u => u.FechaRegistro.Month == DateTime.Now.Month)</span>
                <span class="stat-label">Nuevos (mes)</span>
            </div>
        </div>

        <div class="table-wrapper">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Usuario</th>
                        <th>Correo Electrónico</th>
                        <th>Celular</th>
                        <th>Cédula</th>
                        <th>Tipo</th>
                        <th>Estado</th>
                        <th>Fecha Registro</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in UsuariosFiltrados)
                    {
                        <tr class="table-row">
                            <td class="user-info">
                                <div class="user-avatar">
                                    @GetIniciales(usuario.NombreCompleto)
                                </div>
                                <div class="user-details">
                                    <div class="user-name">@usuario.NombreCompleto</div>
                                    <div class="user-id">ID: @usuario.Id</div>
                                </div>
                            </td>
                            <td class="email">@usuario.Email</td>
                            <td class="phone">@usuario.Celular</td>
                            <td class="cedula">@usuario.Cedula</td>
                            <td>
                                <span class="type-badge @GetTypeBadgeClass(usuario.TipoUsuario)">
                                    @GetTipoText(usuario.TipoUsuario)
                                </span>
                            </td>
                            <td>
                                <span class="status-badge @GetStatusClass(usuario.Estado)">
                                    @GetEstadoText(usuario.Estado)
                                </span>
                            </td>
                            <td class="date">@usuario.FechaRegistro.ToString("dd/MM/yyyy")</td>
                            <td>
                                <div class="action-buttons">
                                    <button class="btn-action btn-view" @onclick="() => VerDetalles(usuario)" title="Ver Detalles">
                                        <span>👁️</span>
                                    </button>
                                    <button class="btn-action btn-edit" @onclick="() => EditarUsuario(usuario)" title="Editar">
                                        <span>✏️</span>
                                    </button>
                                    <button class="btn-action btn-toggle" @onclick="() => CambiarEstado(usuario)" title="@(usuario.Estado == "activo" ? "Desactivar" : "Activar")">
                                        <span>@(usuario.Estado == "activo" ? "🔒" : "🔓")</span>
                                    </button>
                                    <button class="btn-action btn-delete" @onclick="() => EliminarUsuario(usuario)" title="Eliminar">
                                        <span>🗑️</span>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!UsuariosFiltrados.Any())
        {
            <div class="empty-state">
                <span class="empty-icon">👥</span>
                <p>No se encontraron usuarios</p>
            </div>
        }
    </div>

